<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/color_celeste"
        app:cardCornerRadius="15dp"

        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/quattrocento_sans"
                    android:gravity="center"
                    android:text="Seleccione"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:onClick="newManifiesto"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="260dp"
                    android:layout_margin="15dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/ic_manifiesto"
                            android:baselineAligned="false"
                            android:onClick="newManifiesto" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/quattrocento_sans"
                            android:gravity="center"
                            android:text="Registar \nManifiesto"
                            android:textSize="18dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="260dp"
                    android:layout_margin="15dp"
                    android:background="@color/green"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="reviewManifiesto"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/ic_view_manifiesto"
                            android:baselineAligned="false"
                            android:onClick="reviewManifiesto" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/quattrocento_sans"
                            android:gravity="center"
                            android:text="Visualizar\nManifiesto "
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="260dp"
                    android:layout_margin="15dp"
                    android:background="@color/green"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="reviewChofer"
                    app:cardCornerRadius="25dp"

                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/ic_driver"
                            android:baselineAligned="false"
                            android:onClick="reviewChofer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/quattrocento_sans"
                            android:gravity="center"
                            android:text="Visualizar\n Choferes"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="210dp"
                    android:layout_height="260dp"
                    android:layout_margin="15dp"
                    android:background="@color/green"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="reviewVehiculo"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/ic_bus"
                            android:baselineAligned="false"
                            android:onClick="reviewVehiculo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/quattrocento_sans"
                            android:gravity="center"
                            android:text="Visualizar\nVehiculos"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>