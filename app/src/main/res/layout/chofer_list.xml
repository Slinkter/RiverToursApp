<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:paddingBottom="13dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/nombreChofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="13dp"
            android:text="Nombre Chofer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/apellidoChofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreChofer"
            android:layout_alignStart="@+id/nombreChofer"
            android:layout_alignLeft="@+id/nombreChofer"
            android:text="Apellido Chofer" />

        <TextView
            android:id="@+id/dniChofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nombreChofer"
            android:layout_alignEnd="@+id/breveteChofer"
            android:layout_alignRight="@+id/breveteChofer"
            android:text="DNI Chofer"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/breveteChofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dniChofer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:text="brevete Chofer" />

        <TextView
            android:id="@+id/telefonoChofer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apellidoChofer"
            android:layout_alignStart="@+id/apellidoChofer"
            android:layout_alignLeft="@+id/apellidoChofer"
            android:layout_marginBottom="13dp"
            android:text="telefono Chofer" />

    </RelativeLayout>
</android.support.v7.widget.CardView>