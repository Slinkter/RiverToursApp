<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cudpast.rivertourapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_flattr"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_flattr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Business.ConsultManiActivity"></activity>
        <activity android:name=".Business.ConsulVehiculoActivity" />
        <activity android:name=".Business.ConsulChoferActivity" />
        <activity android:name=".Business.newVehiculoActivity" />
        <activity android:name=".Business.NewChoferActivity" />
        <activity android:name=".Business.NewManifActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT " />
            </intent-filter>

        </activity>
    </application>

</manifest>